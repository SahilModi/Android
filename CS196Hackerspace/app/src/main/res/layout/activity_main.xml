<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/name"
        android:layout_alignTop="@+id/name"
        android:layout_toStartOf="@+id/name"
        android:labelFor="@+id/name"
        android:text="@string/nameText"
        android:textColor="@color/defaultBlack"
        android:textSize="20sp"
        android:id="@+id/textView2" />

    <EditText
        android:id="@+id/phoneN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button"
        android:layout_below="@+id/name"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="phone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/phoneN"
        android:layout_alignTop="@+id/phoneN"
        android:layout_toStartOf="@+id/phoneN"
        android:labelFor="@+id/phoneN"
        android:text="@string/phoneText"
        android:textColor="@color/defaultBlack"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button"
        android:layout_below="@+id/phoneN"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/email"
        android:layout_alignTop="@+id/email"
        android:layout_toStartOf="@+id/email"
        android:labelFor="@+id/email"
        android:text="@string/emailText"
        android:textColor="@color/defaultBlack"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button"
        android:layout_below="@+id/email"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPostalAddress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/address"
        android:layout_alignTop="@+id/address"
        android:layout_toStartOf="@+id/address"
        android:labelFor="@+id/address"
        android:text="@string/addressText"
        android:textColor="@color/defaultBlack"
        android:textSize="20sp"
        android:id="@+id/textView" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:text="@string/button_main" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/cameraImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Add Person" />

    <ImageView
        android:id="@+id/cameraImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/address"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/button"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <TextView
        android:labelFor="@+id/cameraImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:textColor="@color/defaultBlack"
        android:textSize="20sp"
        android:layout_below="@+id/address"
        android:layout_marginTop="36dp"
        android:text="Image:" />


</RelativeLayout>
